package com.angus.pattern;

/** 
 * @author GuangSIR 
 * @date 2018年3月16日 下午5:16:10 
 * @version 1.0 
 */
public class Decoder {
	public void decodeFileToStr(String fileNameDes) {
		String str = new FileReader().read(fileNameDes);
		char[] charArray = str.toCharArray();
		for (int i = 0; i < charArray.length; i++) {
			charArray[i] -= 1;
		}
		System.out.println("解密后的字符串为：" + new String(charArray), "UTF-8");
	}
}
